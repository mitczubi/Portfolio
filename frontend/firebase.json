{
  "hosting": {
   "public": "out",
   "ignore": [
     "firebase.json",
     "**/.*",
     "**/node_modules/**"
   ],
   "rewrites": [
    {
      "source": "/post",
      "destination": "/post/index.html"
    },
    {
      "source": "/post/**",
      "destination": "/post/[slug]/index.html"
    }
   ]
  }
 }
 